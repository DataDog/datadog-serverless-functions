{
    "$schema": "https://schema.management.azure.com/schemas/0.1.2-preview/CreateUIDefinition.MultiVm.json#",
    "handler": "Microsoft.Azure.CreateUIDef",
    "version": "0.1.2-preview",
    "parameters": {
        "resourceTypes": [],
        "basics": [
            {
                "name": "location",
                "type": "Microsoft.Common.TextBox",
                "label": "Location",
                "defaultValue": "global",
                "toolTip": "Resources location",
                "constraints": {
                    "required": false,
                    "regex": "[.]{0,}$",
                    "validationMessage": "Must be a valid location"
                },
                "visible": true
            },
            {
                "name": "ServicePrincipal",
                "type": "Microsoft.Common.ServicePrincipalSelector",
                "label": {
                    "servicePrincipalId": "Service Principal Id",
                    "sectionHeader": "Service Principal"
                },
                "toolTip": {
                    "servicePrincipalId": "Service Principal Id"
                },
                "defaultValue": {
                    "principalId": "<default guid>",
                    "name": "(New) default App Id"
                },
                "constraints": {
                    "required": true,
                    "regex": "[.]{0,}$",
                    "validationMessage": "Must be a valid client secret"
                },
                "options": {
                    "hideCertificate": true
                },
                "visible": true
            },
            {
                "name": "datadogApplicationKey",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "datadogApplicationKey": "Datadog Application Key",
                    "confirmPassword": "Re-enter Datadog Application Key"
                },
                "toolTip": "Your Datadog Application key",
                "constraints": {
                    "required": true,
                    "regex": "[.]{0,}$",
                    "validationMessage": "Must be a valid Application Key"
                },
                "options": {
                    "hideConfirmation": true
                },
                "visible": true
            },
            {
                "name": "datadogApiKey",
                "type": "Microsoft.Common.PasswordBox",
                "label": {
                    "datadogApiKey": "Datadog API Key",
                    "confirmPassword": "Re-enter Datadog Api Key"
                },
                "toolTip": "Your Datadog API key",
                "constraints": {
                    "required": true,
                    "regex": "[.]{0,}$",
                    "validationMessage": "Must be a valid API Key"
                },
                "options": {
                    "hideConfirmation": true
                },
                "visible": true
            },
            {
                "name": "hostFilters",
                "type": "Microsoft.Common.TextBox",
                "label": "Host Filters",
                "defaultValue": "",
                "toolTip": "Filter to include/exclude hosts",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "automute",
                "type": "Microsoft.Common.DropDown",
                "label": "Automute",
                "defaultValue": "true",
                "toolTip": "Whether or not to use automute for hosts",
                "constraints": {
                    "required": false,
                    "allowedValues": [
                        {
                            "label": "true",
                            "value": true
                        },
                        {
                            "label": "false",
                            "value": false
                        }
                    ]
                },
                "visible": true
            },
            {
                "name": "datadogSite",
                "type": "Microsoft.Common.TextBox",
                "label": "Datadog Site",
                "defaultValue": "datadoghq.com",
                "toolTip": "The datadog site, e.g. eu1.datadoghq.com",
                "constraints": {
                    "required": false,
                    "regex": "",
                    "validationMessage": ""
                },
                "visible": true
            },
            {
                "name": "providersApi",
                "type": "Microsoft.Solutions.ArmApiControl",
                "request": {
                    "method": "GET",
                    "path": "subscriptions?api-version=2020-01-01"
                }
            },
            {
                "name": "subscriptionsList",
                "type": "Microsoft.Common.DropDown",
                "label": "Subscriptions",
                "toolTip": "The list of subscriptions to monitor",
                "filter": true,
                "multiselect": true,
                "constraints": {
                    "allowedValues": "[map(basics('providersApi').value, (item) => parse(concat('{\"label\":\"', item.displayName, '\",\"value\":\"', item.id, '\"}')))]",
                    "required": false
                },
                "visible": true
            }
        ],
        "steps": [],
        "outputs": {
            "location": "[location()]",
            "subscriptionsList": "[basics('subscriptionsList')]",
            "servicePrincipalId": "[basics('ServicePrincipal').appId]",
            "servicePrincipalSecret": "[basics('ServicePrincipal').password]",
            "datadogApplicationKey": "[basics('datadogApplicationKey')]",
            "datadogApiKey": "[basics('datadogApiKey')]",
            "hostFilters": "[basics('hostFilters')]",
            "automute": "[basics('automute')]",
            "datadogSite": "[basics('datadogSite')]"
        }
    }
}