{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westus2",
            "metadata": {
                "description": "Resources location"
            }
        },
        "servicePrincipalObjectId": {
            "type": "String",
            "metadata": {
                "description": "Service principal object Id, needed for Role Assignment"
            }
        },
        "managementGroupList": {
            "type": "array",
            "defaultValue": ["[managementGroup().id]"],
            "metadata": {
                "description": "Management group Id, to assign a role assignment to"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "copy": {
                "name": "managementGroupCopy",
                "count": "[length(parameters('managementGroupList'))]",
                "mode": "Parallel"
            },
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2021-04-01",
            "name": "[guid(concat('roleAssignMGTpl-', copyIndex()))]",
            "properties": {
                "mode": "Incremental",
                "expressionEvaluationOptions": {
                    "scope": "inner"
                },
                "parameters": {
                    "servicePrincipalObjectId": {
                        "value": "[parameters('servicePrincipalObjectId')]"
                    },
                    "managementGroupId": {
                        "value": "[parameters('managementGroupList')[copyIndex()]]"
                  }
                },
                "template": {
                    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupdeploymentTemplate.json#",
                    "contentVersion": "1.0.0.0",
                    "parameters": {
                        "servicePrincipalObjectId": {
                            "type": "String",
                            "metadata": {
                                "description": "Service principal object Id, needed for Role Assignment"
                            }
                        },
                        "managementGroupId": {
                            "type": "string"
                        }
                    },
                    "variables": {},
                    "resources": [
                        {
                            "type": "Microsoft.Authorization/roleAssignments",
                            "apiVersion": "2020-10-01-preview",
                            "name": "[guid(parameters('managementGroupId'), 'monitoring reader', parameters('servicePrincipalObjectId'))]",
                            "properties": {
                                "roleDefinitionId": "[concat(parameters('managementGroupId'), '/providers/Microsoft.Authorization/roleDefinitions/', '43d0d8ad-25c7-4714-9337-8ba259a9fe05')]",
                                "principalId": "[parameters('servicePrincipalObjectId')]",
                                "principalType": "ServicePrincipal"
                            }
                        }
                    ],
                    "outputs": {
                        "roleDefinitionId": {
                            "type": "string",
                            "value": "[concat(parameters('managementGroupId'), '/providers/Microsoft.Authorization/roleDefinitions/', '43d0d8ad-25c7-4714-9337-8ba259a9fe05')]"
                        }
                    }
                }
            },
            "scope": "[parameters('managementGroupList')[copyIndex()]]",
            "location": "[parameters('location')]"
        }
    ]
}
