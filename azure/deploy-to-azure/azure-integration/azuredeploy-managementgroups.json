{
    "$schema": "https://schema.management.azure.com/schemas/2019-08-01/managementGroupDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "servicePrincipalObjectId": {
            "type": "String",
            "metadata": {
                "description": "Service principal object Id, needed for Role Assignment"
            }
        }
    },
    "variables": {},
    "resources": [
        {
            "type": "Microsoft.Authorization/roleAssignments",
            "apiVersion": "2020-10-01-preview",
            "name": "[guid(managementGroup().id, 'monitoring reader', parameters('servicePrincipalObjectId'))]",
            "properties": {
                "roleDefinitionId": "[concat(managementGroup().id, '/providers/Microsoft.Authorization/roleDefinitions/', '43d0d8ad-25c7-4714-9337-8ba259a9fe05')]",
                "principalId": "[parameters('servicePrincipalObjectId')]",
                "principalType": "ServicePrincipal"
            }
        }
    ],
    "outputs": {}
}