{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
        "view": {
            "kind": "Form",
            "properties": {
                "title": "Datadog Azure Integration",
                "steps": [
                    {
                        "name": "basics",
                        "label": "Basics",
                        "elements": [
                            {
                                "name": "datadogSite",
                                "type": "Microsoft.Common.TextBox",
                                "label": "Datadog site",
                                "defaultValue": "datadoghq.com",
                                "toolTip": "The Datadog site, e.g. eu1.datadoghq.com",
                                "constraints": {
                                    "required": true,
                                    "regex": "",
                                    "validationMessage": ""
                                },
                                "visible": true
                            }
                        ]
                    }
                ],
                "outputs": {
                    "parameters": {
                        "servicePrincipalId": "[steps('basics').datadogSite]",
                        "servicePrincipalSecret": "[steps('basics').datadogSite]",
                        "datadogApplicationKey": "[steps('basics').datadogSite]",
                        "datadogApiKey": "[steps('basics').datadogSite]",
                        "hostFilters": "[steps('basics').datadogSite]",
                        "automute": "[steps('basics').datadogSite]",
                        "datadogSite": "[steps('basics').datadogSite]"
                    },
                    "kind": "ResourceGroup",
                    "location": "[steps('basics').resourceScope.location.name]",
					"resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
                }
            }
        }
}