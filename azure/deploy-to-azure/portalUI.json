{
    "$schema": "https://schema.management.azure.com/schemas/2021-09-09/uiFormDefinition.schema.json",
    "view": {
        "kind": "Form",
        "properties": {
            "title": "Test Form View",
            "steps": [
                {
                    "name": "basics",
                    "label": "Basics",
                    "elements": [
                        {
                            "name": "resourceScope",
                            "type": "Microsoft.Common.ResourceScope",
                            "location": {
                                "resourceTypes": [
                                    "microsoft.resources/resourcegroups"
                                ]
                            }
                        },
						{
							"name": "infoBox1",
							"type": "Microsoft.Common.InfoBox",
							"visible": true,
							"options": {
                                "style": "Info",
								"text": "I love bubbles.",
								"uri": "https://www.microsoft.com"
							}
						},
                        {
                            "name": "datadogSite",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Datadog Site",
                            "defaultValue": "datadoghq.com",
                            "toolTip": "Datadog site to send logs",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "apiKey",
                            "type": "Microsoft.Common.PasswordBox",
                            "label": {
                                "password": "Api Key",
                                "confirmPassword": "Confirm password"
                            },
                            "toolTip": "Datadog API key",
                            "constraints": {
                                "required": true,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "options": {
                                "hideConfirmation": true
                            },
                            "visible": true
                        },
                        {
                            "name": "sendActivityLogs",
                            "type": "Microsoft.Common.DropDown",
                            "label": "Send Activity Logs",
                            "defaultValue": "No",
                            "toolTip": "Choose whether or not you'd like to forward Activity Logs",
                            "constraints": {
                                "required": false,
                                "allowedValues": [
                                    {
                                        "label": "Yes",
                                        "value": "Yes"
                                    },
                                    {
                                        "label": "No",
                                        "value": "No"
                                    }
                                ]
                            },
                            "visible": true
                        },
                        {
                            "name": "eventHubNamespace",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Event Hub Namespace",
                            "defaultValue": "[[concat('datadog-ns-', newGuid())]",
                            "toolTip": "Name of EventHub namespace, which must be globally unique.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "eventHubName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Event Hub Name",
                            "defaultValue": "datadog-eventhub",
                            "toolTip": "Name of Event Hub",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "functionAppName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Function App Name",
                            "defaultValue": "[[concat('datadog-functionapp-', newGuid())]",
                            "toolTip": "The name of the function app ",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "functionName",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Function Name",
                            "defaultValue": "datadog-function",
                            "toolTip": "The name of the function.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "resourcesLocation",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Resources Location",
                            "defaultValue": "[[resourceGroup().location]",
                            "toolTip": "Specify a location for the Azure resources.",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        },
                        {
                            "name": "storageEndpointSuffix",
                            "type": "Microsoft.Common.TextBox",
                            "label": "Storage Endpoint Suffix",
                            "defaultValue": "[[environment().suffixes.storage]",
                            "toolTip": "Endpoint suffix for storage account",
                            "constraints": {
                                "required": false,
                                "regex": "",
                                "validationMessage": ""
                            },
                            "visible": true
                        }
                    ]
                }
            ]
        },
        "outputs": {
            "parameters": {
                "datadogSite": "[steps('basics').datadogSite]",
                "apiKey": "[steps('basics').apiKey]",
                "sendActivityLogs": "[steps('basics').sendActivityLogs]",
                "eventHubNamespace": "[steps('basics').eventHubNamespace]",
                "eventHubName": "[steps('basics').eventHubName]",
                "functionAppName": "[steps('basics').functionAppName]",
                "functionName": "[steps('basics').functionName]",
                "resourcesLocation": "[steps('basics').resourcesLocation]",
                "storageEndpointSuffix": "[steps('basics').storageEndpointSuffix]"
            },
            "kind": "ResourceGroup",
            "location": "[steps('basics').resourceScope.location.name]",
            "resourceGroupId": "[steps('basics').resourceScope.resourceGroup.id]"
        }
    }
}
